<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Add Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/eventTitle" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/addEventTitle"
                android:text="Event Title"
                android:minLines="1"
                android:maxLines="10"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignLeft="@+id/addEventDescription"
                android:layout_alignStart="@+id/addEventDescription"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Enter Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/addEventDescription"
                android:text="Event Description"
                android:minLines="1"
                android:maxLines="10"
                android:textSize="12sp"
                android:layout_below="@+id/addEventTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView7"
                android:layout_toRightOf="@+id/textView7" />

            <TextView
                android:text="Enter Description:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_alignBaseline="@+id/addEventDescription"
                android:layout_alignBottom="@+id/addEventDescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Enter Tutorial:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_alignBaseline="@+id/addTuteName"
                android:layout_alignBottom="@+id/addTuteName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/addDueDate"
                android:text="Select Due Date..."
                android:textSize="12sp"
                android:layout_below="@+id/textView16"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Event"
                android:ems="8"
                android:id="@+id/addEventButton"
                android:singleLine="false"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:textSize="14sp"
                android:layout_below="@+id/addDueTime"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/addTuteName"
                android:text="Tutorial"
                android:minLines="1"
                android:maxLines="10"
                android:textSize="12sp"
                android:layout_below="@+id/addEventDescription"
                android:layout_alignLeft="@+id/addEventDescription"
                android:layout_alignStart="@+id/addEventDescription"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/addDueTime"
                android:text="Select Due Time..."
                android:textSize="12sp"
                android:layout_alignBaseline="@+id/addDueDate"
                android:layout_alignBottom="@+id/addDueDate"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="45dp"
                android:layout_marginEnd="45dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/addDueDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>