<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/Event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/eventTitle" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Tutorial:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_below="@+id/activityDescText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/activityTuteText"
                android:layout_below="@+id/activityDescText"
                android:layout_alignLeft="@+id/activityDescText"
                android:layout_alignStart="@+id/activityDescText"
                android:text="Tutorial"
                android:minLines="1"
                android:maxLines="10"
                android:textSize="12sp" />

            <TextView
                android:text="Created By:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:layout_below="@+id/activityTuteText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/activityOwnerText"
                android:layout_below="@+id/activityTuteText"
                android:layout_alignLeft="@+id/activityTuteText"
                android:layout_alignStart="@+id/activityTuteText"
                android:inputType="textMultiLine"
                android:text="Owner"
                android:minLines="1"
                android:maxLines="10"
                android:textSize="12sp" />

            <Button
                android:text="Delete"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:background="@android:drawable/btn_default_small"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:id="@+id/deleteEventButton"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/activityOwnerText"
                android:layout_toEndOf="@+id/activityOwnerText"
                android:layout_width="100dp" />

            <TextView
                android:text="Description:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_below="@+id/calendarView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CalendarView
                android:layout_width="wrap_content"
                android:id="@+id/calendarView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="300dp" />

            <Button
                android:text="Save Changes"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:background="@android:drawable/btn_default_small"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:id="@+id/saveEventChanges"
                android:layout_width="100dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/deleteEventButton"
                android:layout_toStartOf="@+id/deleteEventButton" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/activityDescText"
                android:layout_below="@+id/calendarView2"
                android:layout_centerHorizontal="true"
                android:text="Event Description"
                android:minLines="1"
                android:maxLines="10"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>